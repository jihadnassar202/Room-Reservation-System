# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_TIME_ZONE=Africa/Cairo
DJANGO_SITE_ID=1

# Database (PostgreSQL)
POSTGRES_DB=room_reservation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Optional: set to 1 to use sqlite for quick local smoke tests (NOT for final Postgres requirements)
USE_SQLITE=0

# Google OAuth (django-allauth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email (SMTP) - reservation confirmations
# If EMAIL_HOST is empty, the app will default to console backend (prints emails to the terminal).
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=
EMAIL_TIMEOUT=10


